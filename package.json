{
  "name": "vendor-backend",
  "version": "1.0.0",
  "description": "Node.js backend for Flutter vendor app with phone OTP authentication",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "node --watch src/index.js",
    "start": "node src/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "seed": "node scripts/seed.js",
    "migrate": "node scripts/migrate.js",
    "vercel-build": "echo 'Build complete'",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,json}\""
  },
  "keywords": [
    "vendor",
    "otp",
    "jwt",
    "mongodb",
    "express",
    "rest-api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "express-rate-limit": "^7.1.5",
    "express-mongo-sanitize": "^2.2.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "dotenv": "^16.3.1",
    "libphonenumber-js": "^1.10.53",
    "slugify": "^1.6.6",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "mongodb-memory-server": "^9.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
